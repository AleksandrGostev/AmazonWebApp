@{
    Layout = "../Shared/_Layout.cshtml";
}

<div id="search-page" class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <form id="search-form" method="POST" action="@Url.Action("Search", "Home")">
                <div class="input-group">
                    <input type="text" class="form-control" id="q" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Search</button>
                    </span>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="form-inline">
                <div class="form-group">
                    <label for="currencies"><h4>Display prices in: </h4></label>
                    <select id="currencies" class="form-control"></select>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <h4>Results:</h4>
        </div>
    </div>
    <div class="result-box">
        <div class="items">
            <div class="row">
                @Html.Partial("~/Views/Home/_SearchResults.cshtml")
            </div>
        </div>
        <button class="btn btn-default load-more">Load more</button>
    </div>
</div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/scripts.js")"></script>
}
