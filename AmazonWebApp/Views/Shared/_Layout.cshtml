<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
    <body class="container">
        <header>
            <div class="row">
                <div class="col-sm-8">
                    <h2>Amazon search</h2>
                </div>
                <div class="col-sm-4">
                    <h2>
                        <div class="form-inline pull-right">
                            <div class="form-group">
                                <label for="currencies"><h4>Display prices in: </h4></label>
                                <select id="currencies" class="form-control"></select>
                            </div>
                        </div>
                    </h2>
                </div>
            </div>
        </header>

        
        <div id="main-body">
            @RenderBody()
        </div>
    
        @Scripts.Render("~/bundle/jquery")
        @Scripts.Render("~/bundle/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
